<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 共有属性定义 -->
    <attr name="textColor" format="color"/>
    <attr name="textSize" format="dimension"/>

    <!--单独属性定义-->
    <declare-styleable name="SimpleLineChartView">
        <attr name="drawType" format="integer"/>
        <attr name="lineColor" format="color"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
    </declare-styleable>

    <declare-styleable name="CatalogPref">
        <attr name="textColor"/>
        <attr name="textSize" />
    </declare-styleable>

    <declare-styleable name="ListPref">
        <attr name="nameArray" format="integer"/>
        <attr name="valueArray" format="integer"/>
        <attr name="itemDescription" format="integer"/>
        <attr name="key" format="string"/>
        <attr name="defaultValue" format="integer"/>
    </declare-styleable>
</resources>