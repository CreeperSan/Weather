        <LinearLayout
            android:id="@+id/fragmentWeatherLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>