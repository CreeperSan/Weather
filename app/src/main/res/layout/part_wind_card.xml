<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:id="@+id/partWindCard"
    app:cardBackgroundColor="#66ccff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/partWindWindmills"
            android:tint="#c0c0c0"
            android:layout_gravity="bottom"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/partWindPointer"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:id="@+id/partWindDegree"
                    android:layout_gravity="center"
                    android:text="190°"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/partWindDegreeTxt"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                android:text="西南风"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/partWindLevel"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                android:text="3-4 级"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/partWindSpd"
                android:layout_marginTop="4dp"
                android:text="21 Km/h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>