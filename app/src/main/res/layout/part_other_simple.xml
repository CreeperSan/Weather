<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="16dp"
        android:src="#909090"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000000"
        android:textSize="16sp"
        android:text="其他信息"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/partOtherVis"
            android:text="能见度"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toEndOf="@id/partOtherVis"
            android:id="@+id/partOtherVisTxt"
            android:text="10"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/partOtherPres"
            android:text="气压"
            android:layout_below="@id/partOtherVis"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toEndOf="@id/partOtherPres"
            android:layout_alignTop="@id/partOtherPres"
            android:id="@+id/partOtherPresTxt"
            android:text="1011"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/partOtherPcpn"
            android:text="降水量"
            android:layout_below="@id/partOtherPres"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toEndOf="@id/partOtherPcpn"
            android:layout_alignTop="@id/partOtherPcpn"
            android:id="@+id/partOtherPcpnTxt"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/partOtherHum"
            android:text="相对湿度"
            android:layout_below="@id/partOtherPcpn"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toEndOf="@id/partOtherHum"
            android:layout_alignTop="@id/partOtherHum"
            android:id="@+id/partOtherHumTxt"
            android:text="83"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>