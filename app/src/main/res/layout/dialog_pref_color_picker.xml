<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/dialogColorPickerCard"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="96dp">
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:text="#"
                android:textColor="#ffffff"
                android:padding="8dp"
                android:background="#99000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/dialogColorPickerHex"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="000000"
                android:textColor="#ffffff"
                android:background="#99000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="红"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dialogColorPickerRedValue"
            android:layout_marginStart="8dp"
            android:text="128"
            android:layout_width="42dp"
            android:layout_height="wrap_content" />
        <SeekBar
            android:id="@+id/dialogColorPickerRedSeekBar"
            android:max="255"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="绿"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dialogColorPickerGreenValue"
            android:layout_marginStart="8dp"
            android:text="128"
            android:layout_width="42dp"
            android:layout_height="wrap_content" />
        <SeekBar
            android:id="@+id/dialogColorPickerGreenSeekBar"
            android:max="255"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="蓝"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dialogColorPickerBlueValue"
            android:layout_marginStart="8dp"
            android:text="128"
            android:layout_width="42dp"
            android:layout_height="wrap_content" />
        <SeekBar
            android:id="@+id/dialogColorPickerBlueSeekBar"
            android:max="255"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>