<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="16dp"
        android:src="#909090"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000000"
        android:textSize="16sp"
        android:text="城市信息"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/partCityCity"
            android:text="城市"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toEndOf="@id/partCityCity"
            android:id="@+id/partCityCityTxt"
            android:text="--"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/partCityCity"
            android:id="@+id/partCityCnty"
            android:text="国家"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignTop="@id/partCityCnty"
            android:layout_below="@id/partCityCity"
            android:layout_toEndOf="@id/partCityCnty"
            android:id="@+id/partCityCntyTxt"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/partCityCnty"
            android:id="@+id/partCityID"
            android:text="ID"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignTop="@id/partCityID"
            android:layout_toEndOf="@id/partCityID"
            android:id="@+id/partCityIdTxt"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/partCityIdTxt"
            android:id="@+id/partCityLat"
            android:text="纬度"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignTop="@id/partCityLat"
            android:layout_toEndOf="@id/partCityLat"
            android:id="@+id/partCityLatTxt"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/partCityLat"
            android:id="@+id/partCityLon"
            android:text="经度"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignTop="@id/partCityLon"
            android:layout_toEndOf="@id/partCityLon"
            android:id="@+id/partCityLonTxt"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>