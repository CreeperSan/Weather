<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/partCityCard"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_part_city"
            android:id="@+id/partCityImage"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_gravity="bottom"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <LinearLayout
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/partCityCountryText"
                android:textSize="26sp"
                android:text="中国"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/partCityCityText"
                android:layout_marginTop="4dp"
                android:textSize="20sp"
                android:text="深圳"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/partCityLatText"
                android:layout_marginTop="4dp"
                android:text="纬度"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/partCityLonText"
                android:layout_marginTop="4dp"
                android:text="经度"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:id="@+id/partCityIDText"
                android:text="CN101280601"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>